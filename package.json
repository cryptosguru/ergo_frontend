    "classnames": "^2.3.1",
    "framer-motion": "^6.3.3",
    "lodash": "^4.17.21",
    "next": "^12.2.5",
    "next-themes": "^0.0.15",
    "nextjs-progressbar": "0.0.14",
    "react": "17.0.2",
    "react-countup": "^6.1.1",
    "react-dom": "17.0.2",
    "react-icons": "^4.4.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-intersection-observer": "^8.33.1",
    "react-intl": "^5.24.3",
